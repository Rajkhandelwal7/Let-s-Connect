<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white"

    tools:context=".Fragments.CryptoFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/sharpendedborder"
        android:textSize="25sp"
        android:padding="15dp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:text="WELCOME \nTO \nSAFE MODE"


        android:gravity="center"
        android:textColor="@color/colorPrimary"/>



<!--  <de.hdodenhof.circleimageview.CircleImageView-->
<!--        android:id="@+id/crypto_image"-->
<!--        android:layout_width="40dp"-->
<!--        android:layout_height="40dp"-->
<!--        android:src="@drawable/crypto"-->
<!--      android:layout_marginTop="-50dp"-->


<!--        android:layout_marginLeft="20dp">-->
<!--    </de.hdodenhof.circleimageview.CircleImageView>-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="SAFE MODE"
        android:textColor="@color/white"
        android:layout_marginLeft="80dp"

        android:textSize="15sp"

        android:layout_marginTop="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:padding="10dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/sharpforitems"
            android:layout_margin="10dp"

            android:layout_weight="1"
            >

            <ImageView
                android:id="@+id/aes_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/aes"

                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AES"
                android:textStyle="bold"
                android:padding="5dp"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sharpforitems"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <ImageView
                android:id="@+id/des_image"
                android:layout_width="90dp"
                android:layout_marginTop="5dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                android:padding="3dp"
                android:src="@drawable/des1"

                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DES"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:padding="5dp"
                android:layout_gravity="center_horizontal"
                />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:padding="10dp"
        >

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/sharpforitems"
            android:layout_weight="1"
            >
            <ImageView
                android:id="@+id/rsa_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:padding="5dp"
                android:src="@drawable/rsa"


                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RSA"
                android:textStyle="bold"
                android:padding="5dp"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:background="@drawable/sharpforitems"
            android:layout_weight="1"
            >
            <ImageView
                android:id="@+id/md5_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:padding="5dp"
                android:src="@drawable/md5"
                android:scaleType="centerCrop"

                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MD5"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:padding="5dp"
                android:layout_gravity="center_horizontal"
                />

        </LinearLayout>

    </LinearLayout>




</LinearLayout>